# Database
# لوکال (Docker): 
# DATABASE_URL="postgresql://latari_user:latari_password@localhost:5432/latari_db"
# چابکان/پروداکشن: مقادیر را از پنل سرویس PostgreSQL بگیرید و در Environment Variables قرار دهید
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# Server
PORT=3001
FRONTEND_URL=http://localhost:3000

# JWT (حتماً در پروداکشن مقادیر تصادفی و امن تولید کنید)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d
